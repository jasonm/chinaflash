<% if current_game.game_over? %>
  <h1>Game <%= current_game.id %> is complete!</h1>
  <%= link_to 'Start a new game...', new_game_path, class: 'btn btn-primary' %>
<% else %>
  <h1>Game <%= current_game.id %> is in play!</h1>
  <h2>Round <%= current_game.current_round_number %></h2>
  <% content_for :head_tags do %>
    <meta http-equiv="refresh" content="1">
  <% end %>
<% end %>

<h3>Cards</h3>
<p><strong><%= current_game.cardset.name %></strong></p>
<% current_game.cardset.cards.each do |card| %>
  <p><%= card.hint_text %>: <%= card.answer_text %></p>
<% end %>

<h3>Players</h3>
<% current_game.participations.each do |participation| %>
  <p><%= participation.student.full_name %>
<% end %>

